extends layout.pug

block content
  - function formatPrice(price) {
  -   return price.toFixed(2).replace('.', ',');
  - }
  
  .container
    div.d-flex.flex-row.justify-content-between
      h2 Produtos
      a.btn.btn-primary.fw-bold.fs-5.p-0(href="/products/new" style="height: 40px; width: 40px; line-height: 40px") +
    if products.length === 0
      div Nenhum produto cadastrado
    else 
      div.row.gap-3.justify-content-center
        each product in products
          div.col-2.border.p-0(role="button")
            image.img-fluid.ratio.ratio-1x1(src=product.imageUrl)
            div.p-1.d-flex.flex-column
              h5.text-capitalize.border-bottom= product.name
              div.d-flex.flex-row.justify-content-between.align-items-center
                span= 'R$ ' + formatPrice(product.price)
                button.btn.btn-primary Comprar
      
